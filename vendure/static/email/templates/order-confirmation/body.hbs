<mjml>
    <mj-head>
        <mj-attributes>
            <mj-all font-family="Arial, Verdana" color="#343434"/>
        </mj-attributes>
    </mj-head>
    <mj-body>
        <mj-section>
            <mj-column>
                <mj-image src="https://wormenkwekerijwasse.netlify.app/logo-wormenkwekerijwasse.png" ></mj-image>
                <mj-divider border-color="#343434"></mj-divider>

                <mj-text>Bedankt voor uw bestelling bij <a href="https://wormenkwekerijwasse.nl">Wormenkwekerij Wasse!</a></mj-text>

            </mj-column>
        </mj-section>

        <mj-section>
            <mj-column>
                <mj-text font-weight="800" padding-bottom="0px">Dit heeft u besteld:</mj-text>

                <mj-table cellpadding="6px">
                    {{#each order.lines }}
                        <tr padding-bottom="0px">
                            <td>{{ quantity }} x</td>
                            <td>
                                {{ productVariant.sku }} {{ productVariant.name }}
                            </td>
                            <td align="right">€ {{ formatMoney linePriceWithTax }}</td>
                        </tr>
                    {{/each}}

                    {{#each order.discounts }}
                        <tr padding-bottom="0px">
                            <td></td>
                            <td>
                                {{ description }}
                            </td>
                            <td align="right">€ {{ formatMoney amount }}</td>
                        </tr>
                    {{/each}}

                    <tr>
                        <td>Verzendkosten</td>
                        <td></td>
                        <td align="right">€ {{ formatMoney order.shippingWithTax }}</td>
                    </tr>

                    <tr></tr>
                </mj-table>
                <mj-divider border-color="#343434" border-width="1px"></mj-divider>
                <mj-table cellpadding="6px">
                    <tr>
                        <td><strong>Totaal</strong></td>
                        <td align="right"><strong>€ {{ formatMoney order.totalWithTax }}</strong></td>
                    </tr>

                </mj-table>

            </mj-column>
        </mj-section>

        <mj-section>
            <mj-column>
                <mj-text font-weight="800" padding-bottom="0px">Bezorgadres</mj-text>
                {{#with order.shippingAddress }}
                    <mj-text padding-bottom="0px">{{ fullName }}</mj-text>
                    {{#if company}}
                        <mj-text padding-bottom="0px">{{ company }}</mj-text>{{/if}}
                    {{#if streetLine1}}
                        <mj-text padding-bottom="0px">{{ streetLine1 }} {{ streetLine2 }}</mj-text>{{/if}}
                    {{#if postalCode}}
                        <mj-text padding-bottom="0px">{{ postalCode }}, {{ city }}</mj-text>{{/if}}
                    {{#if country}}
                        <mj-text>{{ country }}</mj-text>{{/if}}
                {{/with}}
            </mj-column>
            <mj-column>
                <mj-text font-weight="800" padding-bottom="0px">Bestelling</mj-text>
                <mj-text padding-bottom="0px">Nr. {{ order.code }}</mj-text>
                <mj-text padding-bottom="0px">{{ formatDate order.orderPlacedAt }}</mj-text>
            </mj-column>
        </mj-section>

        <mj-section>
            <mj-column>
                <mj-divider border-color="#343434"></mj-divider>
                <mj-text>Vragen of opmerkingen? Neem contact op via <a href="mailto:info@wormenkwekerijwasse.nl">info@wormenkwekerijwasse.nl</a></mj-text>
            </mj-column>
        </mj-section>

    </mj-body>
</mjml>